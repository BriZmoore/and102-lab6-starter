<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Park Image -->
    <ImageView
        android:id="@+id/itemParkImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Park Image"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Park Title -->
    <TextView
        android:id="@+id/itemParkTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Park Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/itemParkImage"
        app:layout_constraintTop_toTopOf="@id/itemParkImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Park Description -->
    <TextView
        android:id="@+id/itemParkDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Park description..."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="5"
        app:layout_constraintStart_toEndOf="@id/itemParkImage"
        app:layout_constraintTop_toBottomOf="@id/itemParkTitle"
        app:layout_constraintBottom_toBottomOf="@id/itemParkImage"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
